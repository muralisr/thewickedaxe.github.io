<html lang="en">
  <head>
    <title>Srinivas!</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../assets/stylesheets/bootstrap.min.css">    
    <script src="../assets/javascripts/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
        <div class="header clearfix">
          <nav class="navbar navbar-inverse">
          <a href="/" class="pull-left"><img src="http://res.cloudinary.com/cowboy/image/upload/v1463866050/cooltext184539561114596_fojicz.png"></a>
          <div class="navbar-header">
            <a class="navbar-brand" href="/">Musing on Technology and Everyday Happenings</a>
        </div>
            <ul class="nav nav-pills pull-right">
              <li role="presentation"><%= link_to 'Home', root_path %></li>
              <li role="presentation"><%= link_to 'About', about_path %></li>
              <li role="presentation" class="active"><%= link_to 'Contact', contact_path %></li>
            </ul>
          </nav>
      </div>
      <div align="center">
      <h3>Contact Me!</h3>
      <%= bootstrap_form_for @contact,:url => contact_path, :html => {:class => 'form-horizontal' } do |f| %>
      <%= f.text_field :name, :required => true, class: "input-small" %>
      <%= f.email_field :email, :required => true %>
      <%= f.text_area :message, :as => :text, :required => true %>
      <div>
        </br>
        <%= f.submit "Send", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
      <footer class="footer">
          <p>&copy; 2016 Srini Suresh</p>
        </footer>
    </div> <!-- /container -->
  </body>
</html>